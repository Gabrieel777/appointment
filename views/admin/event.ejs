<body>
    <div class="container">
        <h1>Consulta: <%= appo.description %></h1>
        <hr>
        <h4>Paciente: <%= appo.name %></h4>
        <h4>Email: <%= appo.email %></h4>
        <h4>CPF: <%= appo.cpf %></h4>
    
        <% if(!appo.finished){ %>
            <form method="POST" action="/finish">
                <input type="hidden" name="id" value="<%= appo._id %>">
                <button class="btn btn-primary">Finalizar Consulta</button>
            </form>
        <% } %>
    </div>
</body>

